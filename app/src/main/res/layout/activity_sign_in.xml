<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teeside_theme"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.tudatingapp.SignInActivity">

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:background="@drawable/lover_pic"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="254dp"
            app:srcCompat="@drawable/ddd" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="#F44336"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:marqueeRepeatLimit="marquee_forever"
            android:minHeight="48dp"
            android:padding="9dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="#F44336"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="9dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/existingUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="3dp"
            android:text="Create Account"
            android:textColor="#8FE82B"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="SIGN IN"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="#C1AF38"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="8dp" />

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fb"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:backgroundTint="@color/fb_color"
            android:drawableLeft="@drawable/facebook_svgrepo_com"
            android:padding="15dp"
            android:text="Facebook"
            android:textSize="15dp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />


        <Button
            android:id="@+id/btn_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/gmail_svgrepo_com"
            android:padding="15dp"
            android:text="Gmail"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/signInPhone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:layout_marginTop="15dp"
        android:text="Sign In with Phone"
        android:textColor="#CC5247"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>