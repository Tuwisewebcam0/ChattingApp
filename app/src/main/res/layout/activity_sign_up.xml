<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_500"
    android:backgroundTint="#393BD1AE"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.soulmatedatingapp.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#087C1B1B"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="173dp"
            android:layout_height="246dp"
            app:srcCompat="@drawable/lover_pic" />

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="#F44336"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Full Names"
            android:inputType="textPersonName"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="9dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="#F44336"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="9dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="#F44336"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="9dp" />

        <TextView
            android:id="@+id/tvExistingUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="3dp"
            android:text="Existing User"
            android:textColor="#202C1D"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_CreateAccount"
        style="SignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"
        android:insetTop="3dp"
        android:insetBottom="4dp"
        android:padding="7dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="Create Account"
        android:textSize="18dp"
        android:textStyle="bold"
        app:cornerRadius="4dp" />

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="63dp"
        android:layout_margin="3dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fb"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/fb_color"
            android:drawableLeft="@drawable/facebook_svgrepo_com"
            android:padding="15dp"
            android:text="Facebook"
            app:cornerRadius="4dp" />

        <Button
            android:id="@+id/btn_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/gmail_svgrepo_com"
            android:padding="15dp"
            android:text="Gmail"
            android:textColor="#090909"
            android:textStyle="bold"
            app:cornerRadius="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/signUpPhone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:layout_marginTop="15dp"
        android:text="Sign Up with Phone"
        android:textColor="#404543"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>